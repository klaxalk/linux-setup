set $inactive-bg-color   #ffffff
set $text-color          #000000
set $inactive-text-color #ffffff
set $urgent-bg-color     #ffffff
set $focused-bg-color    #bbbbbb
set $focused-text-color  #000000

# window colors
#                       border              background         text                 indicator
client.focused          $focused-bg-color   $focused-bg-color  $text-color          #001000
client.unfocused        $focused-bg-color  $inactive-bg-color $text-color  #001000
client.focused_inactive $focused-bg-color   $inactive-bg-color  $text-color #001000
client.urgent           $urgent-bg-color    $urgent-bg-color   $text-color          #001000

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {

	colors {
		background $bg-color
	  separator #000000
		#                  border             background         text
		focused_workspace  $focused-bg-color  $focused-bg-color  $text-color
		inactive_workspace $inactive-bg-color $inactive-bg-color $text-color
		urgent_workspace   $urgent-bg-color   $urgent-bg-color   $text-color
	}

	# i3bar position
	position top

	# Using custom i3status.conf
	status_command i3blocks -c ~/.i3/i3blocks.conf
}

# rofi launcher
bindsym $mod+d exec rofi -show run -lines 3 -eh 2 -width 100 -padding 450 -opacity "85" -bw 0 -bc "$bg-color" -bg "$bg-color" -fg "$text-color" -hlbg "$bg-color" -hlfg "#9575cd" -font "System San Francisco Display 18"

# bind audio to DELL's special keys
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle # mute sound
bindsym XF86AudioLowerVolume exec --no-startup-id amixer set 'Master' 10%-
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer set 'Master' 10%+

# bind audio to generic alt+f keys
bindsym $mod+F5 exec --no-startup-id amixer -c 1 set 'PCM' 10%-
bindsym $mod+F6 exec --no-startup-id amixer -c 1 set 'PCM' 10%+
bindsym $mod+F7 exec --no-startup-id pactl set-sink-mute 0 toggle # mute sound
bindsym $mod+F8 exec --no-startup-id amixer set 'Master' 100%

# Bind screen brightness control to DELLs special keys
bindsym XF86MonBrightnessDown exec --no-startup-id ~/.i3/brightness.sh - # decrease screen brightness
bindsym XF86MonBrightnessUp exec --no-startup-id ~/.i3/brightness.sh + # INCREASE Screen brightness

# Bind screen brightness control to general alt+F...
bindsym $mod+F1 exec --no-startup-id ~/.i3/brightness.sh - # decrease screen brightness
bindsym $mod+F2 exec --no-startup-id ~/.i3/brightness.sh + # decrease screen brightness
bindsym $mod+F3 exec --no-startup-id ~/.i3/brightness.sh 10 # INCREASE Screen brightness
bindsym $mod+F4 exec --no-startup-id ~/.i3/brightness.sh 100 # INCREASE Screen brightness

# toggling touchpad
bindsym $mod+t exec --no-startup-id ~/.i3/toggle_touchpad.sh

