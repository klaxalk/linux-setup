client.focused          $active_border            $active_background    $active_text_color    $inactive_text_color
client.unfocused        $inactive_background      $inactive_background  $inactive_text_color  $inactive_text_color
client.focused_inactive $active_background        $inactive_background  $inactive_text_color  $inactive_text_color
