# #{ auto commands after login

# network monitor
exec --no-startup-id nm-applet

# load monitor configuration
# run arandr to configure the monitors and to export the .monitor.sh file
exec ~/.monitor.sh

# enables transparency
exec --no-startup-id compton -f -D 3 --backend glx --paint-on-overlay --vsync opengl-swc # EPIGEN_DEL_LINE_GPD EPIGEN_DEL_LINE_TOSHIBA EPIGEN_DEL_LINE_PETR EPIGEN_DEL_LINE_PAVEL EPIGEN_DEL_LINE_HONZA EPIGEN_DEL_LINE_DANIEL

# sound-card control
exec_always --no-startup-id indicator-sound-switcher

