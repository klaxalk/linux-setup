[load]
interval=5
label= 
command=cat /proc/loadavg | cut -d' ' -f1-3
# color=#000000 # EPIGEN_ADD_LINE_COLORSCHEME_LIGHT
color=#ffffff # EPIGEN_DEL_LINE_COLORSCHEME_LIGHT

# Network interface monitoring
#
# If the instance is not specified, use the interface used for default route.
# The address can be forced to IPv4 or IPv6 with -4 or -6 switches.

[iface]
instance=eth0
# color=#000000 # EPIGEN_ADD_LINE_COLORSCHEME_LIGHT
color=#ffffff # EPIGEN_DEL_LINE_COLORSCHEME_LIGHT
interval=10
label= 

[iface]
instance=wlan0
# color=#000000 # EPIGEN_ADD_LINE_COLORSCHEME_LIGHT
color=#ffffff # EPIGEN_DEL_LINE_COLORSCHEME_LIGHT
interval=10
label= 

[online-status]
command=ping -c 1 google.com >> /dev/null||echo 'No Internet'
color=#FF0000
interval=20

# Volume indicator
#
# The first parameter sets the step (and units to display)
# The second parameter overrides the mixer selection
# See the script for details.
[volume]
label=VOL 
label=♪ 
instance=Master
#instance=PCM
interval=1
signal=10
command=~/.i3/show_volume.sh
# olor=#000000 # EPIGEN_ADD_LINE_COLORSCHEME_LIGHT
color=#ffffff # EPIGEN_DEL_LINE_COLORSCHEME_LIGHT

# Memory usage
#
# The type defaults to "mem" if the instance is not specified.
# [memory]
# label=MEM 
# separator=false
# interval=30

#[memory]
#label=SWAP 
#instance=swap
#separator=false
#interval=30

# Disk usage
#
# The directory defaults to $HOME if the instance is not specified.
# The script may be called with a optional argument to set the alert
# (defaults to 10 for 10%).
[disk]
label=SSD 
#instance=/mnt/data
interval=30
# color=#000000 # EPIGEN_ADD_LINE_COLORSCHEME_LIGHT
color=#ffffff # EPIGEN_DEL_LINE_COLORSCHEME_LIGHT

[wifi]
instance=wlan0
label= 
interval=10
# color=#000000 # EPIGEN_ADD_LINE_COLORSCHEME_LIGHT
color=#ffffff # EPIGEN_DEL_LINE_COLORSCHEME_LIGHT

[bandwidth]
label= 
interval=1
separator=true
INLABEL= 
OUTLABEL= 
# color=#000000 # EPIGEN_ADD_LINE_COLORSCHEME_LIGHT
color=#ffffff # EPIGEN_DEL_LINE_COLORSCHEME_LIGHT

# Battery indicator
#
# The battery instance defaults to 0.
[battery]
label=⚡ 
instance=0
interval=30
# color=#000000 # EPIGEN_ADD_LINE_COLORSCHEME_LIGHT
color=#ffffff # EPIGEN_DEL_LINE_COLORSCHEME_LIGHT

[keyboard]
label= 
interval=2
command=~/.i3/show_keyboard_layout.sh
# color=#000000 # EPIGEN_ADD_LINE_COLORSCHEME_LIGHT
color=#ffffff # EPIGEN_DEL_LINE_COLORSCHEME_LIGHT

# Date Time
#
[time]
command=date '+%d/%m/%Y %H:%M:%S'
interval=1
separator=true
# color=#000000 # EPIGEN_ADD_LINE_COLORSCHEME_LIGHT
color=#ffffff # EPIGEN_DEL_LINE_COLORSCHEME_LIGHT

[clickme]
full_text=
command=~/.i3/shutdown_menu -p rofi
separator=true
# color=#000000 # EPIGEN_ADD_LINE_COLORSCHEME_LIGHT
color=#ffffff # EPIGEN_DEL_LINE_COLORSCHEME_LIGHT

