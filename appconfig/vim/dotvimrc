Bundle 'ervandew/supertab'

" youcompleteme
Plugin 'valloric/youcompleteme'

" make ros and vim to be friends
Plugin 'taketwo/vim-ros'

" commenting stuff made easy
Plugin 'tpope/vim-commentary'

" modifying surroundings by "s" target
